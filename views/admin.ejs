<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KeyAuth Admin Dashboard</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body>
    <div class="app-container">
        <!-- Sidebar -->
        <aside id="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="ri-shield-keyhole-line"></i>
                    <span>KeyAuth</span>
                </div>
                <button id="sidebar-toggle" class="mobile-toggle">
                    <i class="ri-menu-line"></i>
                </button>
            </div>

            <div class="sidebar-content">
                <div class="user-profile">
                    <img src="https://avatars.githubusercontent.com/u/12345678" alt="Admin" class="avatar">
                    <div class="user-info">
                        <h4>Admin User</h4>
                        <span class="user-role">Administrator</span>
                    </div>
                </div>

                <nav class="sidebar-nav">
                    <ul>
                        <li class="nav-item active" onclick="showSection('dashboard')">
                            <a href="#">
                                <i class="ri-dashboard-line"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item" onclick="showSection('users')">
                            <a href="#">
                                <i class="ri-user-line"></i>
                                <span>Users</span>
                            </a>
                        </li>
                        <li class="nav-item" onclick="showSection('keys')">
                            <a href="#keys">
                                <i class="ri-key-line"></i>
                                <span>License Keys</span>
                            </a>
                        </li>
                        <li class="nav-item" onclick="showSection('settings')">
                            <a href="#">
                                <i class="ri-settings-line"></i>
                                <span>Settings</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="logout">
                                <i class="ri-logout-box-line"></i>
                                <span>Log Out</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="top-header">
                <div class="header-left">
                    <button id="mobile-sidebar-toggle" class="mobile-toggle">
                        <i class="ri-menu-line"></i>
                    </button>
                    <h2 class="page-title">Dashboard</h2>
                </div>
                <div class="header-right">
                    <div class="theme-toggle">
                        <button id="theme-switch">
                            <i class="ri-moon-line"></i>
                        </button>
                    </div>
                    <div class="header-notifications">
                        <button class="notification-btn">
                            <i class="ri-notification-line"></i>
                            <span class="badge">3</span>
                        </button>
                    </div>
                    <div class="user-dropdown">
                        <button class="user-dropdown-btn">
                            <img src="https://avatars.githubusercontent.com/u/12345678" alt="Admin" class="avatar-small">
                            <span>Admin</span>
                            <i class="ri-arrow-down-s-line"></i>
                        </button>
                    </div>
                </div>
            </header>

            <!-- Dashboard Section -->
            <section id="dashboard" class="content-section">
                <div class="stats-row">
                    <div class="stat-card">
                        <div class="stat-icon blue">
                            <i class="ri-user-line"></i>
                        </div>
                        <div class="stat-details">
                            <h3 class="stat-title">Total Users</h3>
                            <p class="stat-value">256</p>
                            <div class="stat-trend positive">
                                <i class="ri-arrow-up-line"></i>
                                <span>14% from last week</span>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon green">
                            <i class="ri-key-line"></i>
                        </div>
                        <div class="stat-details">
                            <h3 class="stat-title">Active Keys</h3>
                            <p class="stat-value">189</p>
                            <div class="stat-trend positive">
                                <i class="ri-arrow-up-line"></i>
                                <span>8% from last week</span>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon purple">
                            <i class="ri-key-2-line"></i>
                        </div>
                        <div class="stat-details">
                            <h3 class="stat-title">Used Keys</h3>
                            <p class="stat-value">67</p>
                            <div class="stat-trend positive">
                                <i class="ri-arrow-up-line"></i>
                                <span>5% from last week</span>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon orange">
                            <i class="ri-timer-line"></i>
                        </div>
                        <div class="stat-details">
                            <h3 class="stat-title">App Usage</h3>
                            <p class="stat-value">24.8h</p>
                            <div class="stat-trend positive">
                                <i class="ri-arrow-up-line"></i>
                                <span>12% from last week</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="card chart-card">
                        <div class="card-header">
                            <h3 class="card-title">User Activity</h3>
                            <div class="card-actions">
                                <select class="form-select">
                                    <option>Last 7 Days</option>
                                    <option>Last 30 Days</option>
                                    <option>This Year</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="chart-placeholder">
                                <!-- Chart would be placed here with a charting library -->
                                <div class="mock-chart"></div>
                            </div>
                        </div>
                    </div>

                    <div class="card recent-activity">
                        <div class="card-header">
                            <h3 class="card-title">Recent Activity</h3>
                            <div class="card-actions">
                                <button class="btn btn-sm btn-outline">
                                    <i class="ri-refresh-line"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <ul class="activity-list">
                                <li class="activity-item">
                                    <div class="activity-icon blue">
                                        <i class="ri-user-add-line"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p class="activity-text">New user registered</p>
                                        <p class="activity-time">5 minutes ago</p>
                                    </div>
                                </li>
                                <li class="activity-item">
                                    <div class="activity-icon green">
                                        <i class="ri-key-line"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p class="activity-text">License key activated</p>
                                        <p class="activity-time">30 minutes ago</p>
                                    </div>
                                </li>
                                <li class="activity-item">
                                    <div class="activity-icon red">
                                        <i class="ri-close-circle-line"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p class="activity-text">Failed login attempt</p>
                                        <p class="activity-time">1 hour ago</p>
                                    </div>
                                </li>
                                <li class="activity-item">
                                    <div class="activity-icon purple">
                                        <i class="ri-settings-line"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p class="activity-text">Settings updated</p>
                                        <p class="activity-time">3 hours ago</p>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Users Section -->
            <section id="users" class="content-section" style="display: none;">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">User Management</h3>
                        <div class="card-actions">
                            <div class="search-bar">
                                <input type="text" placeholder="Search users..." class="search-input">
                                <i class="ri-search-line search-icon"></i>
                            </div>
                            <button class="btn btn-primary" onclick="fetchUsers()">
                                <i class="ri-refresh-line"></i>
                                <span>Refresh</span>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-container">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>HWID</th>
                                        <th>IP Address</th>
                                        <th>Registration Date</th>
                                        <th>Expiry</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="userList">
                                    <tr>
                                        <td>user123</td>
                                        <td>3C6A-59F2-8D71-E940</td>
                                        <td>192.168.1.105</td>
                                        <td>01/05/2025</td>
                                        <td>01/06/2025</td>
                                        <td class="action-cell">
                                            <button class="btn-icon edit" onclick="editUser('1', 'user123', '01/06/2025')">
                                                <i class="ri-pencil-line"></i>
                                            </button>
                                            <button class="btn-icon delete" onclick="deleteUser('1')">
                                                <i class="ri-delete-bin-line"></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Keys Section -->
            <section id="keys" class="content-section" style="display: none;">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">License Keys</h3>
                        <div class="card-actions">
                            <div class="search-bar">
                                <input type="text" placeholder="Search keys..." class="search-input">
                                <i class="ri-search-line search-icon"></i>
                            </div>
                            <button class="btn btn-primary" onclick="showform()">
                                <i class="ri-add-line"></i>
                                <span>Generate Keys</span>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-container">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>License Key</th>
                                        <th>Status</th>
                                        <th>HWID</th>
                                        <th>Created</th>
                                        <th>Expiry</th>
                                        <th>Note</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="keyList">
                                    <tr>
                                        <td>KEYAUTH-AB1CD-EF2GH-IJ3KL-MN4OP</td>
                                        <td><span class="badge badge-success">Active</span></td>
                                        <td>3C6A-59F2-8D71-E940</td>
                                        <td>01/05/2025</td>
                                        <td>01/06/2025</td>
                                        <td>Premium License</td>
                                        <td class="action-cell">
                                            <button class="btn-icon copy" onclick="copyToClipboard('KEYAUTH-AB1CD-EF2GH-IJ3KL-MN4OP')">
                                                <i class="ri-file-copy-line"></i>
                                            </button>
                                            <button class="btn-icon delete" onclick="deleteKey('1')">
                                                <i class="ri-delete-bin-line"></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Settings Section -->
            <section id="settings" class="content-section" style="display: none;">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Application Settings</h3>
                    </div>
                    <div class="card-body">
                        <form id="settings-form">
                            <div class="settings-grid">
                                <div class="form-group">
                                    <label for="appName">Application Name</label>
                                    <input type="text" id="appName" class="form-control" value="KeyAuth" placeholder="Application Name">
                                </div>
                                <div class="form-group">
                                    <label for="appVersion">Application Version</label>
                                    <input type="text" id="appVersion" class="form-control" value="1.0.0" placeholder="Application Version">
                                </div>
                                <div class="form-group">
                                    <label for="adminEmail">Admin Email</label>
                                    <input type="email" id="adminEmail" class="form-control" value="admin@keyauth.com" placeholder="Admin Email">
                                </div>
                                <div class="form-group">
                                    <label for="themeMode">Theme Mode</label>
                                    <select id="themeMode" class="form-control">
                                        <option value="light">Light</option>
                                        <option value="dark">Dark</option>
                                        <option value="system">System Default</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="defaultExpiry">Default License Duration (Days)</label>
                                    <input type="number" id="defaultExpiry" class="form-control" value="30" placeholder="Default License Duration">
                                </div>
                                <div class="form-group">
                                    <label for="maxLoginAttempts">Max Login Attempts</label>
                                    <input type="number" id="maxLoginAttempts" class="form-control" value="5" placeholder="Max Login Attempts">
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <button type="button" class="btn btn-danger">Reset to Default</button>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <!-- Modal for Key Generation -->
    <div class="modal-overlay" id="keygenModal">
        <div class="modal">
            <div class="modal-header">
                <h2 class="modal-title">Generate License Keys</h2>
                <button class="modal-close" onclick="hideform()">&times;</button>
            </div>
            <div class="modal-body">
                <form id="key-generator-form" onsubmit="generateKey(); return false;">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="keyAmount">Number of Keys</label>
                            <input type="number" id="keyAmount" name="amount" min="1" max="100" value="1" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="keyPattern">Key Pattern</label>
                            <input type="text" id="keyPattern" name="mask" value="KEYAUTH-xxxxx-xxxxx-xxxxx-xxxxx" class="form-control">
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="keyType">License Type</label>
                            <select id="keyType" name="type" class="form-control">
                                <option value="1">Standard</option>
                                <option value="2">Premium</option>
                                <option value="3">Enterprise</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="keyNote">License Note</label>
                            <input type="text" id="keyNote" name="note" placeholder="License Note" class="form-control">
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="expiryUnit">Expiry Unit</label>
                            <select id="expiryUnit" name="expiry_unit" class="form-control">
                                <option value="days">Days</option>
                                <option value="months">Months</option>
                                <option value="years">Years</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="expiryDuration">Duration</label>
                            <input type="number" id="expiryDuration" name="duration" min="1" value="30" class="form-control" required>
                        </div>
                    </div>
                    
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="useUppercase" name="uppercase" checked>
                            <label for="useUppercase">Include Uppercase</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="useLowercase" name="lowercase">
                            <label for="useLowercase">Include Lowercase</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="useNumbers" name="numbers" checked>
                            <label for="useNumbers">Include Numbers</label>
                        </div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="ri-key-line"></i> Generate Keys
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="script.js"></script>
</body>

</html>